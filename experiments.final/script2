#!/bin/bash

OUT=`pwd`/experiments.final/output2
for psi in 0 1 2 -1 -2 ; # 5 10 20 0.5 -0.5 -1 -1.5 -2 -2.5 -3 -3.5 -4 -4.5 -4.75 ; do
    for layers in 25 50 ; do
	OUTDIR=$OUT/f0_psi$psi
	mkdir -p $OUTDIR
        python biholoNN_train.py --seed 1234 \
                                 --n_pairs 1000 \
                                 --batch_size 5000 \
                                 --function "f0" \
                                 --psi $psi \
                                            \
                                 --layers $layers \
                                 --save_dir $OUTDIR/ \
                                 --save_name $layers \
                                                     \
                                 --max_epochs 2 \
                                 --loss_func "weighted_MAPE" 
    done
done

for psi in 0 1 2 -1 -2 ; # 5 10 20 0.5 -0.5 -1 -1.5 -2 -2.5 -3 -3.5 -4 -4.5 -4.75 ; do
    for phi in -1 1 2 -2; do
	OUTDIR=$OUT/f1_psi${psi}_phi${phi}
	mkdir -p $OUTDIR
        for layers in 25 50 ; do
				    python biholoNN_train.py --seed 1234 \
				 --n_pairs 100000 \
				 --batch_size 5000 \
		          	 --function "f1" \
				   --psi $psi \
                                     --phi $phi \
				 --layers $layers \
				 --save_dir $OUTDIR/
 				--save_name $layers \
				 --max_epochs 500 \
				 --loss_func "weighted_MAPE" 
        done
    done
done
